/** order.wxss **/
.background {
	width: 100%;
	height: 100%;
	position: fixed;
	z-index: -1;
}
.order_view {
	width: 90%;
	padding-top: 5%;
	padding-left: 5%;
	padding-right: 5%;
	height: 50px;
	display: flex;
	flex-direction: row;
	justify-content:space-around
}
.order_view_img{
	width:270rpx;
	height:120rpx
}
.order_status_img{
	width:110rpx;
	height:100rpx
}
.list {
	padding-left: 5%;
	padding-right: 5%;
	padding-bottom: 2%;
	padding-top: 5%;
}
.order_list {
	margin-top: 0rpx;
	background-color: #fff;
	border-radius: 35rpx;
	padding: 3%;
	font-size:0.9em
}
.order_list_head{
	display:flex;
	flex-direction: row;
	
}
.order_list_order_no{
	font-weight:700;
	color:red;
}
.line{
	margin-top:30rpx;
	height:1rpx;
	width:100%;
	background-color:#E6E6E6
}
.bottom {
	color: #fff;
	font-size: 12px;
}
.btn{
	font-size:20rpx;
	border-radius: 25rpx; 
	color:#ffffff
}
.red{
	background-color:#FE3846;
}
.hui{
	background-color:#1B294C;
}
.blue{
	background-color:#0473FF;
}
.store_name {
	width:55%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.th {
	color: black;
	display: flex;
}