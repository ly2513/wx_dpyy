<view>
	<image class="background" src="/images/v2.0/background.png"></image>
	<scroll-view class="" style="height: 1500rpx" scroll-y="true" bindscrolltoupper="refresh" bindscrolltolower="loadMore">
		<!-- 主要订单内容 -->
		<view class='order_view'>
			<image bindtap="seachOrder" class="order_view_img" src="/images/v2.0/order_flush.png"></image>
			<image bindtap="autoFile" class="order_view_img"  src="/images/v2.0/up_print.png"></image>
		</view>
		<view class='list' wx:for="{{contentlist}}" wx:key="index">
			<view class='order_list'>
				<view class="order_list_head">
					<view style="width:80%">
						<view>
							订单编号：{{item.first_no}}<span class="order_list_order_no">{{item.last_no}}</span>
						</view>
						<view style='padding-top:20rpx;'>
							下单时间：{{item.create_time}}
						</view>
					</view>

					<view style="width:20%">
						<block wx:if="{{item.status==1}}">
							<image class="order_status_img" src="/images/v2.0/ico_nopay.png"></image>
						</block>
						<block wx:if="{{item.status == 2}}">
							<image class="order_status_img" src="/images/v2.0/printing.png"></image>
						</block>
						<block wx:if="{{item.status == 3}}">
							<image class="order_status_img" src="/images/v2.0/cancle.png"></image>
						</block>
						<block wx:if="{{item.status == 4}}">
							<image class="order_status_img" src="/images/v2.0/print_finish.png"></image>
						</block>
						<block wx:if="{{item.status == 5}}">
							<image class="order_status_img" src="/images/v2.0/order_finish.png"></image>
						</block>
					</view>
				</view>

				<view style='padding-top:20rpx;' class="th">
					<span class="store_name" bindtap="showtoast" data-content="{{item.store_name}}">{{"下单门店："+item.store_name}}</span>
					支付金额：<text style="color:#FE3846">{{item.price}}</text>元
				</view>

				<view class="line"></view>
				<block wx:if="{{item.status==1 && item.price !='0.00'}}">
					<view class="order_list_head" >
						<view style="width:30%"></view>
						<view class="order_list_head" style='padding-top:20rpx;width:70%;' wx:if="{{item.status==1}}">
							<button class="btn red" bindtap='cancelOrder' data-order_id="{{item.id}}">取消订单</button>
							<button class="btn hui" bindtap='getOrderDetail' data-order_id="{{item.id}}" data-order_no="{{item.order_no}}" 
							data-status="{{item.status}}" data-create_time="{{item.create_time}}" data-store_name="{{item.store_name}}" 
							data-phone_no="{{item.phone_no}}"  >查看详情</button>
							<button class="btn blue" bindtap='payOrder' data-order_id="{{item.id}}">去支付</button>
						</view>
					</view>
				</block>

				<block wx:else>
					<view class="order_list_head" >
          				<view style="width:70%"></view>
						<view style='padding-top:20rpx;width:30%;'>
							<button class="btn hui" bindtap='getOrderDetail' data-create_time="{{item.create_time}}" data-order_id="{{item.id}}" data-order_no="{{item.order_no}}" data-status="{{item.status}}" data-store_name="{{item.store_name}}" data-phone_no="{{item.phone_no}}">查看详情</button>
						</view>
					</view>
				</block>
			</view>
			<view class="loading" hidden="{{!searchLoading}}">正在载入更多...</view>
			<view class="loading complete" hidden="{{!searchLoadingComplete}}">已加载全
			</view>
		</view>
	</scroll-view>
	<view class="bottom" hidden="{{hideBottom}}">
		<view>{{loadMoreData}}</view>
	</view>
</view>