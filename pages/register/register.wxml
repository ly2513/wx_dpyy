
<view class="page">
  <view class="weui-form">
    <view class="weui-form__text-area">
      <view class="weui-form__title">注 册</view>
      <!-- <view class="weui-form__desc">表单描述示意</view> -->
    </view>
    <view class="weui-form__control-area" style="margin: 5% 0% 0% 0%;">
      <view class="weui-cells__group weui-cells__group_form">
          <view class="weui-cells weui-cells_form">
            <view class="weui-cell" style='padding:5% 20%'>
              <view class="weui-cell__hd">
                <label class="weui-label">手机号</label>
              </view>
              <view class="weui-cell__bd">
                  <input class="weui-input" type="number" pattern="[0-9]*" placeholder="请输入手机号" maxlength='11' name='phone' value='{{phoneNo}}'  bindblur="getInputPhone"  placeholder-class="notice"/>
                  <!-- bindinput="getInputPhone" -->
              </view>
            </view>
            <view class="weui-cell weui-cell_vcode">
              <view class="weui-cell__hd">
                <label class="weui-label">验证码</label>
              </view>
              <view class="weui-cell__bd">
                  <input class="weui-input" type="number" pattern="[0-9]*" placeholder="请输入验证码"  bindblur="getInputCode" maxlength='4' name='code' placeholder-class="notice"/>
              </view>
              <view class="weui-cell__ft">
                <button class="weui-btn weui-btn_default weui-vcode-btn" bindtap="sentValidateCode" data-phone="{{phoneNo}}" type='button' form-type="submit"  style='width:100%;'>{{codename}}</button>
              </view>
            </view>
            <view class="weui-cell" style="padding:5% 20%">
              <view class="weui-cell__hd">
                <label class="weui-label">密码</label>
              </view>
              <view class="weui-cell__bd">
                  <input class="weui-input" type="password" pattern="[0-9]*" placeholder="请输入密码" name='password' bindblur='getInputPassword' placeholder-class="notice"/>
              </view>
            </view>
            <view class="weui-cell" style="padding:5% 10% 5% 20%">
              <view class="weui-cell__hd">
                <label class="weui-label">确认密码</label>
              </view>
              <view class="weui-cell__bd">
                  <input class="weui-input" type="password" pattern="[0-9]*" placeholder="请输入确认密码" name="rePassword" bindblur='getInputRePassword' placeholder-class="notice"/>
              </view>
            </view>
          </view>
      </view>
    </view>
    <view class="weui-form__tips-area">
      <label for="weuiAgree" class="weui-agree">
        
        <input id="weuiAgree" type="checkbox" class="weui-agree__checkbox"/>
        <span class="weui-agree__text" style="display:block;width:100%;">       <navigator url="../agree/agree">阅读并同意《相关条款》</navigator>
        </span>
      </label>
    </view>
    <view style='margin:0 auto;'>
      <!-- <button type="primary" style='width:45%;float:left;'>取消</button>
      <button type="primary" style='width:45%;float:left;margin-left:10%;'>确定</button> -->
      <button type="default" class="login_button" hover-class="other-button-hover" style='background-color:#29abe0;color:#fff;margin-right:2em;' bindtap='cancel'> 取消 </button>
  <button bindtap='save' type="default" class="login_button" hover-class="other-button-hover" style='background-color:#29abe0;color:#fff' > 提交 </button>
    </view>
    <view class="weui-form__tips-area">
      <view class="weui-form__tips" style='color:#fff;'>
        点击提交即表示<navigator href="javascript:;">同意用户协议</navigator>
      </view>
    </view>
    <view class="weui-form__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__text" style='color:#fff;'>Copyright © 2013-2019 www.dpyunyin.com</view>
      </view>
    </view>
  </view>
</view>
