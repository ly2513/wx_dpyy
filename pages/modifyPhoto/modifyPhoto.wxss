/* pages/newPlaceOrder.wxss */
.background {
  width: 100%;
  height: 200rpx;
  position: fixed;
  /* background-size:100% 100%; */
  z-index: -1;
}

.tip{
  display: flex;
  width: 100%;
  flex-direction: row;
}
.tip_text{
  display: flex;
  width: 80%;
  height: auto;
  justify-content: flex-start;
  /* border:1px solid red; */
  padding-left: 10rpx;
}
.tip_img{
  display: flex;
  width: 20rpx;
  height: 20rpx;
  justify-content: center;
}
.girl_img_view{
  display: flex;
  width: 100%;
  justify-content: center;
}
.girl_img{
  display: flex;
  width: 400rpx;
  height: 500rpx;
  padding-top: 30rpx;
}
.color_lay{
  display: flex;
  width: 20%;
  justify-content: center;
  flex-direction: column;
  align-items: center
}
.color_btn{
  border-radius: 60rpx;
  width: 100rpx;
  height: 100rpx;
}
.content_bg {
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  /* justify-content:center */
  align-items: center
}

.form {
  margin-top: 10%;
  width: 90%;
  display: flex;
  flex-direction: column;
  border-radius: 25px;
  background-color: white;
}

.chose_color{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  justify-content:center;
  align-items: center;
  margin-top: 50rpx;
  /* border:1px solid red; */
  margin-bottom: 50rpx;

}

.arrows_img {
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
}

.text_1 {
  width: 20%;
  height: auto;
  padding-left: 20rpx;
}

.text_2 {
  width: 70%;
  height: auto;
  color: gray;
  align-items: flex-start;
  display: flex;
  justify-content: flex-end;
  padding-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 20rpx;

}

.line {
  width: 90%;
  height: 1.5rpx;
  color: #E6E6E6;
  background-color: #E6E6E6;
  padding-left: 20rpx;
  padding-right: 5rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.textremark {
  width: 30%;
  height: 90%;
  padding-left: 20rpx;
  padding-top: 50rpx;
}

.textarea {
  width: 90%;
  height: 70%;
  padding-left: 20rpx;
  color: gray;
  /* border:1px solid red; */
}
.textarea1 {
  width: 90%;
  height: 70%;
  padding-left: 20rpx;
  color: gray;
  /* border:1px solid red; */
  display: none;
}

.remarkitem {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  /* justify-content:center */
  align-items: center;
  /* border:1px solid red */
}

.btns {
  padding-top: 50rpx;
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 200rpx;
  justify-content: center;
  align-items: center;
}

.btn_1 {
  background-color: white;
  width: 40%;
  color: #1B294C;
  border-radius: 15px;
  height: 50%;
  margin-top: 30rpx;
  border:1px solid #1B294C;

}

.btn_2 {
  background-color: #1B294C;
  width: 40%;
  height: 50%;
  color: white;
  border-radius: 15px;
  margin-top: 30rpx;
  margin-left: 10%;
}

.array_item {
  background-color: #F2F2F2;
  display: flex;
  flex-direction: row;
  border-radius: 10px;
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.item_left {
  display: flex;
  flex-direction: column;
  width: 15%;
  height: 100%;
  align-items: center;
  justify-items: center;
  margin-top: 30rpx;
  /* padding-left: 10rpx;
  margin-left: 20rpx; */
}

.item_right {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* border:1px solid red; */
  padding-top: 25rpx;
  /* padding-left: 25rpx; */
  
}

.radio {
  font-size: 25rpx;
  padding-top: 10rpx;
  align-items: flex-start;
  width: 100%;
  transform: scale(0.7);

}

.radiogroup {
  display: flex;
  flex-direction: column;
  justify-content: left;
  justify-items: left;
  align-items: flex-start;
  width: 33%;
}





