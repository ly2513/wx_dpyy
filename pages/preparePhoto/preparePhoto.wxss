/* pages/newPlaceOrder.wxss */
.background {
	width: 100%;
	height: 200rpx;
	position: fixed;
	z-index: -1;
}
.content_bg {
	padding-top: 40rpx;
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	align-items: center
}
.form {
	margin-top: 10%;
	width: 90%;
	display: flex;
	flex-direction: column;
	border-radius: 25px;
	background-color: white;
}
.lineline{
	width: 40%;
	display: flex;
	justify-content: flex-end;
	align-items: center;
}
.tip{
  display: flex;
  width: 100%;
  flex-direction: row;
}
.tip_text{
  display: flex;
  width: 80%;
  height: auto;
  justify-content: flex-start;
  padding-left: 10rpx;
}
.tip_img{
  display: flex;
  width: 20rpx;
  height: 20rpx;
  justify-content: center;
}
.girl_img_view{
  display: flex;
  width: 100%;
  justify-content: center;
}
.girl_img{
  display: flex;
  width: 350rpx;
  height: 350rpx;
  padding-top: 30rpx;
}
.btns {
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 200rpx;
  justify-content: center;
  align-items: center;
}
.btn_1 {
  background-color: white;
  width: 100%;
  color: #1B294C;
  border-radius: 15px;
  height: 50%;
  border:1px solid #1B294C;
}
.btn_2 {
  background-color: #1B294C;
  width: 100%;
  height: 50%;
  color: white;
  border-radius: 15px;
  margin-top: 30rpx;
}