<view class="container">
	<view>
		<image src='/images/v1.1/new_small_logo.png' class='logo_img'></image>
	</view>
	<view class='line'></view>
	<view class='title'>
		订单<strong style='color:#FFFF00;'>{{orderNo}}</strong>
	</view>
	<view class="blackline"></view>
	<view class="table">
		<view class="tr">
			<view class="th">详情列表</view>
			<view class="orblackline"></view>
			<view class="th-1">金额</view>
		</view>
		<view class="blackline"></view>


		<block wx:for="{{fileList}}" wx:key="index">
			<view class="tr1">
				<view class="th2">
					<view class="tr">
						<view class="td" style="width:15%; padding-left:4%">文件:</view>
						<view class="td" style=" width:85%" bindtap="showtoast" data-content="{{item.source_name}}">{{item.source_name}}</view>
					</view>
					<view class="blackline"></view>
					<view class="tr">
						<view class="td" style="width:15%; padding-left:4%">要求:</view>
						<view class="td" style=" width:85%" bindtap="showtoast" data-content="{{item.request}}">{{item.request}}</view>
					</view>
				</view>

				<view class="orblackline"></view>
				<view class="th-1">{{item.price}}</view>
			</view>
			<view class="blackline"></view>
		</block>

		<view class="tr">
			<view class="th">订单合计</view>
			<view class="orblackline"></view>
			<view class="th-1">{{total_price}}</view>
		</view>


	</view>
	<block wx:if="{{status==1 && total_price !='0'}}">
		<view class="pay_button" wx:if="{{status==1}}">
			<button style='background-color:#007131; color:#ffffff;width:45%' bindtap='payOrder' data-favorite="{{order_id}}">支付</button>
      <button style="background-color:#626262;color:#ffffff;width:45%" bindtap='cancelOrder' data-order_id="{{order_id}}">取消</button>
		</view>
	</block>

  <view class="store_info">
    <view class="store_info_phone" bindtap="showtoast" data-content="{{store_name}}">{{"服务门店："+store_name}}</view>
    <view class="store_info_phone" bindtap='callPhone' data-phone_no="{{phone_no}}">{{"客服咨询："+phone_no}}</view>
  </view>
