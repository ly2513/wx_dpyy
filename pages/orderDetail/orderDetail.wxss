  padding:7.7% 0% 6.0% 0%;
}
.line{
  width:100%;
  height:10rpx;
  background-color:#fff;
}
.table {
  border: 1px solid #2c2c2c;
  width: 100%;
  margin-bottom: 10rpx;
}
.tr {
  display: flex;
  width: 100%;
  /* justify-content: center; */
