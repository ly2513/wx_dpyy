	display:flex;
	flex-direction:row;
	justify-content:flex-end;
	align-items:center
}
.discount_price{
	font-size:25rpx;
	margin-right:50rpx
}
.discount_price_front{
	color:#FE3846;
	font-weight: 700;
}

.price_box{
	margin-top:30rpx;
	margin-right:60rpx;
