  text-align: center;
}
.td {
    width:20%;
    justify-content: center;
    display: flex;
    text-align: center;
    border-right: 1px solid darkgray;
    height: 100%;
}
.td-1 {
    width:70%;
    justify-content: center;
    display: flex;
    text-align: center;
    /* border-right: 1px solid #ddd; */
