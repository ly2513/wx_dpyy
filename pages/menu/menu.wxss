/** menu.wxss **/
.text{
  margin-top:5%;
  color:#fff;
  position: fixed;
  bottom:3%;
  justify-content:center;
  width: 100%;
  display: flex;
  align-items:center;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.layout_horizontal{
  display: flex;
  /*row 横向  column 列表  */
  width: 85%;
  height: 600rpx;
  flex-direction: row;
  background-color: transparent;
  justify-content:center;
  
}

/*纵向布局  */
.layout_vertical{
  width: 50%;
  height: 100%;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
  justify-content:center;
}
.print_order{
  width: 100%;
  height: 60%;
