<!--login.wxml-->
<view class="container" style='padding-top:4%;'>
  <div class="img_div">
  <image src='/images/min_log.png' style='width:6em;height:2em;'></image>
  </div>
  <view class="userinfo">
    <view style="width:100%;height:3.7em;">
      <view wx:if="{{!hasUserInfo && canIUse}}" style='float:left;'>
        <image bindtap="bindViewTap" class="userinfo-avatar" style="float:left;width:50px;" src="/images/head.png" background-size="cover" ></image>
        <view style='float:left;padding:15% 0% 0% 0%;'>
          <text class="userinfo-nickname" >达派云印，欢迎你</text>
        </view>
      </view>
      <block wx:else>
      <view style='float:left;'>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover" ></image>
        </view>
        <view style='float:left;padding:15% 0% 0% 0%;'>
        <text class="userinfo-nickname" >{{userInfo.nickName}}，欢迎你</text>
      </view>
      </block> 
    </view>
    <view style="width:100%;">
     <button type="default" class="login_button" hover-class="other-button-hover" style='background-color:#93bfdc;margin-top:5%;' > 我要下单打印 </button>
    </view>
     <!-- <view style="width:100%;height:3.5em;"> -->
     <view style="width:100%;height:5em;">
      <button type="default" class="login_button" bindtap="chooseimage"   hover-class="other-button-hover" style='background-color:#93bfdc;' open-type="navigate" > 上传文件 </button>
      <!-- <image src="{{tempFilePaths }}" mode="aspecFill" style="width: 100%; height: 450rpx;margin:1rem 0;"/>  -->
        <web-view src="http://127.0.0.1:1025/Api/File/index"></web-view>  
       <!-- <web-view src="http://192.168.1.101:4000/Api/File/index"></web-view> -->
    </view> 
    <view class="section input_view">
      <text class="text" >姓名：</text>
      <input placeholder="请输入姓名" class="input" type="text" name="name"/>
    </view>
    <view class="section input_view" >
      <text class="text" >电话：</text>
      <input placeholder="请输入电话" class="input" type="text" name="phone"/>
    </view>
    <view class="section input_view" >
      <text class="text" >地址：</text>
      <input placeholder="请输入地址" class="input" type="text" name="address"/>
    </view>
    <view class="section input_view" >
      <text class="text" >派送时间：</text>
      <picker bindchange="bindPickerChange" value="{{timeIndex}}" range="{{time}}" class='select'>  
        <view class="picker">  {{time[timeIndex]}} </view>  
      </picker> 
    </view>
    <view style="width:100%;padding:0px 20px;">
      <button class="button_success button_plus" bindtap="returnBack" style="" > 提交 </button>
      <button class="button_back button_plus" bindtap="returnBack" style="" > 返回 </button>
    </view>
  </view>
  <view class="foot" >
     <image src='/images/min_foot.png' style='height:1.5em;width:6.5em;'></image>
  </view>
</view>
