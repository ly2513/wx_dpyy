/**menu.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0.5% 7% 2% 7%;
  background-color:#fff;
  width:72%;
  height:80%;
  margin:2% 0%;
  border-radius: 10%;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 50px;
}

.login_button{
background-color:#93bfdc;
color:#000;
width:14em;
height:3em;
margin-bottom:10%;
font-size:37rpx;
line-height:3em;
border-radius:50em;
}
.input_view{
float:left;
padding:10px;
}
.input{
  width:180px;
  border:1px solid #ccc;
  padding:10rpx;
}
.select{
   width:144px;
  border:1px solid #ccc;
  padding:10rpx;
  float: left;
}
.text{
  float:left;
  line-height: 35px;
  display: inline-block;
}
.button_success{
  background-color:#93bfdc;
  border-radius: 10em;
  font-size:100%;
  color:#000;
  width:7em;
  height:3em;
  line-height:3em;
  float: left;
  margin-right: 10px;
}

.button_back{
  background-color: #ccc;
  border-radius: 10em;
  font-size:100%;
  color:#000;
  width:7em;
  height:3em;
  line-height:3em;
  float: left;
}

.img_div{
    height:100%;
    float:left;
    width:90%;
}

.foot{
width: 30%;
margin:1% 2% 3% 60%;
}