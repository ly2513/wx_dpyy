page,.page {
	height:100%;
  	background-color: #29abe0;
}
.background {
	width: 100%;
	height: 100%;
	position:fixed; 
	background-size:100% 100%;
	z-index: -10;
}
.bg{
	border-radius: 25rpx;
	background-color: white;
	margin-left: 20rpx;
	margin-right: 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-content: center;
}
.logo_img{  
	margin: 0 auto;
	width:21.8em;
	height:4.5em;
	padding:7.7% 0% 6.0% 0%;
}
.login_title{
	margin-top:30rpx;
	display:flex;
	justify-content: center; 
	align-content: center;
	font-size:35rpx;
	color:#000000
}
.input_title{
	font-size:0.8em;
	color:#6C6C6C;
	width:18%;
	margin-left:5%
}
.input_line{
	width:1rpx;
	height:50rpx;
	background-color:#CACACA;
}
.login_box{
	height:80rpx;
	align-items:center;
	background-color:#ffffff;
	display:flex;
	flex-direction:row;
	border-radius: 45rpx;
	border:1rpx solid #DEDEDE;
	margin-top:30rpx;
	margin-left:30rpx;
	margin-right:30rpx
}
.btn{
	width:100%;
	height:50rpx;
	font-size:16rpx;
	color:#FFFFFF;
	background-color:#55A8DB;
	display:flex; 
	justify-content:center; 
	align-items:center
}
.btn_code{
	padding-left: 10px;
	padding-right: 10px;
}
.input_content{
	padding-left:20rpx;
	color:#000000;
	width:50%
}
input {
	cursor:auto;
	display:block;
	height:1.4rem;
	text-overflow:clip;
	overflow:hidden;
	white-space:nowrap;
	font-family:UICTFontTextStyleBody;
	min-height:1.4rem;
  	color: #fff;
}
.logo_box{
	text-align: center;
}
.login_button{
	width:6em;
	height:3em;
	margin-bottom:10%;
	font-size:large;
	line-height:3em;
	letter-spacing:3rpx;
	float: left;
}
.cancel_btn{
	background-color:#FFFFFF;
	color:#1B294C;
	margin-right:2em;
	border-radius: 25rpx;
	border:1rpx solid #1B294C;
}
.login_btn{
	background-color:#1B294C;
	color:#fff;
	border-radius: 25rpx
}