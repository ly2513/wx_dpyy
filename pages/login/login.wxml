<view >
	<image class='background' src="/images/v2.0/background.png" mode="aspectFill"></image>
	<view class="logo-box">
		<image class="logo_img" src="/images/logo.png" mode="aspectFill"></image>
	</view>
	<view>
		<view class="bg">
			<view style="margin-top:30rpx;display:flex;justify-content: center; align-content: center;font-size:35rpx;color:#000000">微信绑定手机号码</view>
			<view style='height:80rpx;align-items:center;background-color:#ffffff;display:flex;flex-direction:row;border-radius: 45rpx;border:1rpx solid #DEDEDE;margin-top:30rpx;margin-left:30rpx;margin-right:30rpx'>
				<view style="font-size:0.8em;color:#6C6C6C;width:18%;margin-left:5%">手机号</view>
				<view style="background-color:#CACACA;height:50rpx;width:1rpx;"></view>
				<input style="padding-left:20rpx;color:#000000;width:50%" type="number" pattern="[0-9]*" placeholder="请输入手机号" maxlength='11' name='phone' value='{{phone}}' bindinput="getInputPhone" />
				<view style="width:20%">
					<button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" data-phone="{{phone}}" type='button' form-type="submit" style='font-size:16rpx;color:#FFFFFF;background-color:#55A8DB;width:100%;height:50rpx;display:flex; justify-content:center; align-items:center'>{{phonename}}</button>
				</view>
			</view>
			<view style='height:80rpx;align-items:center;background-color:#ffffff;display:flex;flex-direction:row;border-radius: 45rpx;border:1rpx solid #DEDEDE;margin-top:30rpx;margin-left:30rpx;margin-right:30rpx'>
				<view style="font-size:0.8em;color:#6C6C6C;width:18%;margin-left:5%">验证码</view>
				<view style="background-color:#CACACA;height:50rpx;width:1rpx;"></view>
				<input style="padding-left:20rpx;color:#000000;width:45%" type="number" pattern="[0-9]*" placeholder="请输入验证码" maxlength='4' bindinput="getInputCode" name='code' />
				<view style="width:25%">
					<button bindtap="sentValidateCode" data-phone="{{phoneNo}}" type='button' form-type="submit" style='font-size:16rpx;color:#FFFFFF;background-color:#55A8DB;width:100%;height:50rpx;display:flex; justify-content:center; align-items:center'>{{codename}}</button>
				</view>
			</view>
      <view style='margin:0 auto;margin-top:30rpx'>
				<button type="default" class="login_button" hover-class="other-button-hover" style='background-color:#FFFFFF;color:#1B294C;margin-right:2em;border-radius: 25rpx;border:1rpx solid #1B294C;' bindtap='cancel'> 取消 </button>
				<button bindtap='login' type="default" class="login_button" hover-class="other-button-hover" style='background-color:#1B294C;color:#fff;border-radius: 25rpx'> 登录 </button>
			</view>
		</view>
	</view>

