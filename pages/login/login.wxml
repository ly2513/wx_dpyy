<view class="page">
  <view style='text-align:center;'>
    <image src='/images/v1.1/new_small_logo.png' class='logo_img'></image>
  </view>
  <view class="weui-form">
    <view class="weui-form__text-area">
      <view class="weui-form__title">微信绑定手机号</view>
    </view>
    <view class="weui-form__control-area" style="margin: 5% 0% 0% 0%;flex:0;">
      <view class="weui-cells__group weui-cells__group_form">
          <view class="weui-cells weui-cells_form">
            <view class="weui-cell" style='padding:5% 10%'>
              <view class="weui-cell__hd">
                <label class="weui-label">手机号</label>
              </view>
              <view class="weui-cell__bd">
                  <input class="weui-input" type="number" pattern="[0-9]*" placeholder="请输入手机号" maxlength='11' name='phone' value='{{phone}}'  bindblur="getInputPhone"  placeholder-class="notice" />
                  <!-- bindinput="getInputPhone" -->
              </view>
              <view class="weui-cell__ft" style="padding-left:5px;">
                <button class="weui-btn weui-btn_default weui-vcode-btn" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber"  data-phone="{{phone}}" type='button' form-type="submit"  style='width:100%;'>{{phonename}}</button>
              </view>
            </view>
            <view class="weui-cell weui-cell_vcode" style='padding:5% 10%'>
              <view class="weui-cell__hd" >
                <label class="weui-label">验证码</label>
              </view>
              <view class="weui-cell__bd">
                  <input class="weui-input" type="number" pattern="[0-9]*" placeholder="请输入验证码"  bindblur="getInputCode" maxlength='4' name='code' placeholder-class="notice"/>
              </view>
              <view class="weui-cell__ft" style="padding-left:10px;">
                <button class="weui-btn weui-btn_default weui-vcode-btn" bindtap="sentValidateCode" data-phone="{{phoneNo}}" type='button' form-type="submit"  style='width:100%;'>{{codename}}</button>
              </view>
            </view>
          </view>
      </view>
    </view>
    
    <view style='margin:0 auto;'>
      <button type="default" class="login_button" hover-class="other-button-hover" style='background-color:#29abe0;color:#fff;margin-right:2em;' bindtap='cancel'> 取消 </button>
      <button bindtap='login' type="default" class="login_button" hover-class="other-button-hover" style='background-color:#29abe0;color:#fff' > 绑定 </button>
    </view>
    <!-- <view class="weui-form__tips-area">
      <view class="weui-form__tips" style='color:#fff;'> 
        <navigator url="../register/register">新用户注册</navigator>
      </view>
    </view> -->
    <view class="weui-form__tips-area">
      <view class="weui-form__tips" style='color:#fff;'>
        点击提交即表示同意 <navigator url="../agree/agree">《用户协议》</navigator>
      </view>
    </view>
    <view class="weui-form__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__text" style='color:#fff;'>Copyright © 2013-2020 www.dpyunyin.com</view>
      </view>
    </view>
  </view>
</view>