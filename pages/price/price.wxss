.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
 background-color:#fff;
  padding: 1% 7% 2% 7%;
  width:72%;
  margin:4% 0%;
  border-radius: 10%;
}
.info{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2% 6%;
  width:90%;
  margin:4% 0%;
  border-radius: 50em;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50em;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 50px;
}


.login_button{
background-color:#93bfdc;
color:#000;
width:14em;
height:3em;
margin-bottom:10%;
font-size:37rpx;
line-height:3em;
border-radius:50em;
}

.img_div{
    height:100%;
    float:left;
    width:90%;
}
.table {
  width: 100%;
  border: 0px solid darkgray;
  font-size: 11px;
  margin-bottom:8%; 
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
  color: #000;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #2ba6de;
  color: #fff;
}
.th {
  width: 40%;
  justify-content: center;
  background: #306faa;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}
.button_success{
  border-radius: 10em;
  margin-top:2%;
  font-size:100%;
  background-color:#93bfdc;
  color:#000;
  width:7em;
  height:3em;
  line-height:3em;
}

.foot{
width: 30%;
margin:0% 2% 3% 60%;
}